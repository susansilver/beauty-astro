---
const {src,alt, caption} = Astro.props
---
<figure class="flex flex-col p-2">
<img class="full-width" src={src} alt={alt}>
<figcaption class="flex justify-center text-xs">{caption}</figcaption>
</figure>

<style>
    .full-width {
	left: 50%;
	margin-left: -50vw;
	margin-right: -50vw;
	max-width: 100vw;
	position: relative;
	right: 50%;
	width: 100vw;
}
</style>